<Window x:Class="Contropad.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contropad.Desktop"
        mc:Ignorable="d"
        Title="Contropad" Height="350" Width="525" Loaded="Window_Loaded" Icon="pack://siteoforigin:,,,/Resources/joystick.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="background" Source="pack://siteoforigin:,,,/Resources/joystick.png" HorizontalAlignment="Left" Width="143" Height="149" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="86" Margin="338,41,0,0" VerticalAlignment="Top" Width="169" SelectedValue="{Binding ElementName=_this, Path=SelectedIP}"/>
        <Label x:Name="label" Content="IP" HorizontalAlignment="Left" Margin="295,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Start Server" HorizontalAlignment="Left" Margin="338,132,0,0" VerticalAlignment="Top" Width="169" Height="33" Click="button_Click"/>
    </Grid>
</Window>
